<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp">

            <RelativeLayout
                android:id="@+id/reporter_name_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_62sdp"
                android:layout_marginTop="@dimen/_20sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/reporter_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:text="@string/reporter_name_text"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/reporter_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/input_background_corner"
                    android:hint="@string/reporter_name_text"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/reporter_name_text_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reporter_name_input"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/error_text"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/home_name_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_62sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:text="@string/home_name_text"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/home_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/input_background_corner"
                    android:hint="@string/home_name_text"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/home_name_text_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_name_input"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/error_text"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/street_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_62sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/street_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:text="@string/street_text"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/street_input"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/input_background_corner"
                    android:hint="@string/street_text"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/street_text_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/street_input"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/error_text"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/ward_layout"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_62sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ward_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:text="@string/ward_text"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/ward_input"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/input_background_corner"
                        android:hint="@string/ward_text"
                        android:inputType="textEmailAddress"
                        android:paddingStart="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/ward_text_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ward_input"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text="@string/error_text"
                        android:textColor="@color/red"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/district_layout"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_62sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/district_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:text="@string/district_text"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/district_input"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/input_background_corner"
                        android:hint="@string/district_text"
                        android:inputType="textEmailAddress"
                        android:paddingStart="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/district_text_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/district_input"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text="@string/error_text"
                        android:textColor="@color/red"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/city_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_62sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/city_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:text="@string/city_text"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/city_input"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/input_background_corner"
                    android:hint="@string/city_text"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/city_title_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/city_input"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/error_text"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/furniture_type_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_62sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/furniture_type_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:text="@string/furniture_type_text"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/furniture_type_input"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/input_background_corner"
                    android:hint="@string/furniture_type_text"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_furniture_type_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/furniture_type_input"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/error_text"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/house_type_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_62sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/house_type_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:text="@string/house_type_text"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/house_type_input"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/input_background_corner"
                    android:hint="@string/house_type_text"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_house_type_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/house_type_input"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/error_text"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/price_layout"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_62sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/price_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:text="@string/price_text"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/price_input"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/input_background_corner"
                        android:hint="@string/price_text"
                        android:inputType="number"
                        android:paddingStart="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/price_title_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/price_input"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text="@string/error_text"
                        android:textColor="@color/red"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/no_room_layout"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_62sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/no_room_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:text="@string/no_room_text"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        tools:visibility="visible" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/no_room_input"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/input_background_corner"
                        android:hint="@string/no_room_text"
                        android:inputType="number"
                        android:paddingStart="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/grey"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/no_room_text_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/no_room_input"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text="@string/error_text"
                        android:textColor="@color/red"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:visibility="visible" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/description_layout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_130sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/description_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:text="@string/notes_text"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/description_input"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/input_background_corner"
                    android:gravity="top|start"
                    android:hint="@string/notes_text"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:maxLines="8"
                    android:minLines="4"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/grey"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/description_text_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/description_input"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/error_text"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/login_button"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:background="@drawable/button_radius_drawable"
                android:enabled="false"
                android:text="@string/confirm_text"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>